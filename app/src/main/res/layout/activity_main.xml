<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="36sp"
            android:fontFamily="@font/roboto_medium"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/birutua"/>
        <ImageView
            android:id="@+id/iv_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_baseline_history_24"
            android:layout_alignParentRight="true"
            android:layout_marginHorizontal="10dp"

            />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_kipas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/birutua"
            android:backgroundTint="@color/birutua"
            app:cardCornerRadius="13dp"
            android:layout_marginHorizontal="10dp"
            android:padding="20dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_kipas"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_fan"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_state_kipas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:text="-"
                        android:textColor="@color/kuning"
                        android:textSize="24sp"
                        />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_lampu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/birutua"
            android:backgroundTint="@color/birutua"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="13dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_lampu"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="150dp"
                    android:src="@drawable/ic_lamp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_state_lampu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:text="-"
                        android:textColor="@color/kuning"
                        android:textSize="24sp"
                        />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <TextView
            android:id="@+id/tv_kipas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="KIPAS"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/roboto_medium"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:shadowRadius="3"/>
        <TextView
            android:id="@+id/tv_lampu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="LAMPU"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/roboto_medium"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:shadowRadius="3"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_pintu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/birutua"
            android:backgroundTint="@color/birutua"
            app:cardCornerRadius="13dp"
            android:layout_marginHorizontal="10dp"
            android:padding="20dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_pintu"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="150dp"
                    android:src="@drawable/ic_door"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_state_pintu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:text="-"
                        android:textColor="@color/kuning"
                        android:textSize="24sp"
                        />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_checkout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/birutua"
            android:backgroundTint="@color/birutua"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="13dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_checkout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:src="@drawable/ic_checkout"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <TextView
            android:id="@+id/tv_pintu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="PINTU"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/roboto_medium"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:shadowRadius="3"/>
        <TextView
            android:id="@+id/tv_checkout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="CHECKOUT"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/roboto_medium"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:shadowRadius="3"/>
    </LinearLayout>

</LinearLayout>