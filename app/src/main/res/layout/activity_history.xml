<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/orange"
    tools:context=".History">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HISTORY"
        android:fontFamily="@font/roboto_medium"
        android:textSize="38sp"
        android:paddingVertical="20dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:shadowRadius="3"/>
    <LinearLayout
        android:id="@+id/lypilihan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_pilihan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="8dp"
            android:padding="10dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pilih Tanggal"
                        android:layout_margin="6dp"
                        android:textColor="@color/kuning"
                        android:textSize="16sp"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanggal"
                        android:layout_margin="6dp"
                        android:layout_centerVertical="true"/>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/tglawal"
                        android:layout_width="160dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:backgroundTint="#F6F6F6"
                        android:layout_marginEnd="6dp"
                        app:cardCornerRadius="6dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="6dp">
                        <TextView
                            android:id="@+id/tvtglawal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:padding="3dp"
                            android:background="@drawable/bg_spinner"
                            android:drawableRight="@drawable/ic_date_range"
                            android:gravity="left|center_vertical"
                            android:layout_marginLeft="6dp"
                            android:text="--Pilih Tanggal Awal--"
                            android:textSize="10dp" />
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="6dp"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hingga Tanggal"
                        android:layout_margin="6dp"
                        android:layout_centerVertical="true"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/tglakhir"
                        android:layout_width="160dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="6dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="6dp"
                        android:backgroundTint="#F6F6F6"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="6dp">
                        <TextView
                            android:id="@+id/tvtglakhir"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="--Pilih Tanggal Akhir--"
                            android:textSize="10dp"
                            android:drawableRight="@drawable/ic_date_range"
                            android:padding="3dp"
                            android:background="@drawable/bg_spinner"
                            android:layout_marginLeft="6dp"
                            android:gravity="left|center_vertical"/>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal"
                    android:layout_marginEnd="6dp"
                    android:layout_marginRight="6dp">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_tampilhistory"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="TAMPILKAN"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:backgroundTint="@color/orange"
                        android:textColor="@color/white"/>
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/lb_tabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/putih_pucat"
        app:cardCornerRadius="8dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="2dp"
        android:paddingBottom="16dp"
        android:layout_below="@+id/cv_title"
        app:cardElevation="2dp">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="1"
            android:columnCount="3"
            android:paddingVertical="6dp"
            android:paddingBottom="6dp"
            android:layout_marginHorizontal="10dp">
            <TextView
                android:id="@+id/title_id"
                android:gravity="center_horizontal"
                android:textSize="14sp"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:textColor="@color/birutua"
                android:text="ID"/>
            <TextView
                android:id="@+id/title_time"
                android:gravity="center_horizontal"
                android:textSize="14sp"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="2"
                android:textColor="@color/birutua"
                android:text="Waktu"/>
            <TextView
                android:id="@+id/title_activity"
                android:gravity="center_horizontal"
                android:textSize="14sp"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="3"
                android:textColor="@color/birutua"
                android:text="Activity"/>
        </GridLayout>
    </androidx.cardview.widget.CardView>
    <androidx.recyclerview.widget.RecyclerView
        android:visibility="visible"
        android:id="@+id/rv_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lb_tabel"/>

</LinearLayout>